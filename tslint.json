{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "max-classes-per-file": [ false ],
        "max-line-length": [true, {"ignore-pattern": "^import"}],
        "member-ordering": [ false ],
        "no-console": [ false ],
        "no-empty": [true, "allow-empty-functions"],
        "variable-name": { 
            "options": [
                "allow-leading-underscore",
                "ban-keywords"
            ]
        },
        "trailing-comma": [ false ]
    },
    "rulesDirectory": []
}
